{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "es2018.promise",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "/node_modules/",
    "/dist"
  ]
}